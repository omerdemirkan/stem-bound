{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "listEmittedFiles": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./build"
  },
  // "files": ["./src/types/override.types.ts"],
  "include": ["./*", "src/**/*.ts"],
  "exclude": ["node_modules/**"]
}
